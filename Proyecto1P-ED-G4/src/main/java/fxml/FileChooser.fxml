<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="estructuradatos.Proyecto1P.FileChooserController">
   <children>
      <GridPane layoutX="3.0" layoutY="3.0" prefHeight="390.0" prefWidth="600.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="485.0" minWidth="10.0" prefWidth="448.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="267.0" minWidth="10.0" prefWidth="152.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="137.0" minHeight="10.0" prefHeight="55.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="335.0" minHeight="10.0" prefHeight="335.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="btnVolver" mnemonicParsing="false" onAction="#volverVentanaAlbum" prefHeight="26.0" prefWidth="52.0" text="Volver" />
            <Label text="Buscar y mostrar imagen">
               <GridPane.margin>
                  <Insets left="80.0" />
               </GridPane.margin></Label>
            <Button fx:id="btnBuscar" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Buscar" textAlignment="CENTER" GridPane.columnIndex="1" />
            <Label fx:id="lbMensajeError" textFill="#e41414" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets top="250.0" />
               </GridPane.margin>
            </Label>
            <ImageView fx:id="ivImagen" fitHeight="322.0" fitWidth="443.0" pickOnBounds="true" preserveRatio="true" GridPane.rowIndex="1" />
            <VBox prefHeight="335.0" prefWidth="139.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <Label prefHeight="29.0" prefWidth="110.0" text="Lugar:" />
                  <TextField fx:id="tfLugar" />
                  <Label prefHeight="29.0" prefWidth="110.0" text="Info:" />
                  <TextField fx:id="tfInfo" prefHeight="64.0" prefWidth="115.0" />
                  <Label text="Agregar a favoritos:" />
                  <CheckBox fx:id="checkBoxFavoritos" mnemonicParsing="false" onAction="#cambiarFavorito" text="Favoritos" />
                  <Label prefHeight="20.0" prefWidth="148.0" text="Personas:" textAlignment="JUSTIFY" />
                  <Label text="(Separados por comas) " underline="true" />
                  <TextField fx:id="tfPersona1" />
                  <Button fx:id="btnAgregarImagen" mnemonicParsing="false" onAction="#CrearImagen" prefHeight="49.0" prefWidth="131.0" text="Agregar Imagen" />
               </children>
            </VBox>
         </children>
      </GridPane>
   </children>
</AnchorPane>
